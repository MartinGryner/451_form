extends layout

block content
	div#main
		ul.nav-tabs.nav
			li.active
				a="Iseteenindus"
			li
				a="Tasuline"
		div#selfService
			form(parsley-validate, method="post")#self
				p
					label="URL:"
					input(type="text", parsley-required="true", name="url", title="Täpne aadress, kus asub soovida eemaldatav sisu")#url
				p
					label="Selgitus:"
					textarea(name="message", parsley-required="true", title="Kirjelda probleemi võimalikult täpselt. On ülimalt tõenäoline et selle kirja saaja ei ole süüdi soovida eemaldatava sisu eksisteerimises tema lehel")#message
				p
					label="Kontaktisiku e-mail:"
					input(name="contactPerson", type="text", parsley-required="true", title="Saavutate parima tulemuse kui leiate lehelt kust soovite sisu eemaldada kontaktisiku")#contactPerson
				p
					label="Põhjus:"
					select(name="reason", parsley-required="true", title="Vali, millist seadust antud sisu rikub")#reason
						option(value="")="Vali siit juriidiline alus sisu eemaldamiseks"
						option(value="r1")="Isikuandmeid puudutava sisu eemaldamine"
						option(value="r2")="Tarbijate õigusi rikkuva või konkurenti halvustava sisu eemaldamine"
						option(value="r3")="Hasartmängulehekülgede eemaldamine "
						option(value="r4")="Karistusseadusega keelatud tegevused (vaenu õhutamine, identiteedivargus, lasteporno, sõjapropaganda, internetikelmused jne)"
						option(value="r5")="Laimu, halvustava, privaatsust rikkuva või isikuõigusi riivava sisu eemaldamine"
						option(value="r6")="Sisu, mis rikub autoriõigusi"
				p
					label="Sinu nimi:"
					input(name="name", type="text", parsley-required="true")#name
				p
					label="Sinu e-mail:"
					input(name="email", type="text", parsley-type="email", parsley-required="true")#email
				p.
				<strong>Kõikide väljade täitmine on kustuslik.</strong><br />
				input(type="submit", value="Saada")#send
